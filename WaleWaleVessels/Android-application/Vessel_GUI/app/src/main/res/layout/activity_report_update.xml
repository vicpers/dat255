<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.example.juliagustafsson.vessel_gui.Report_Update">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" >

            <Button
                android:id="@+id/Anchoring"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="sendNewAnchoring"
                android:text="Anchoring"
                android:textSize="24sp" />

            <Button
                android:id="@+id/BerthShifting"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:text="Berth Shifting"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" >

            <Button
                android:id="@+id/BunkeringOperation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:text="Bunkering Operation"
                android:textSize="24sp" />

            <Button
                android:id="@+id/CargoOperation"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:text="Cargo Operation"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" >

            <Button
                android:id="@+id/Towage"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="Towage"
                android:text="Towage"
                android:textSize="24sp" />

            <Button
                android:id="@+id/Pilotage"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="sendNewPilotage"
                android:text="Pilotage"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" >

            <Button
                android:id="@+id/EscortTowage"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:text="Escort Towage"
                android:textSize="24sp" />

            <Button
                android:id="@+id/DepartureBerth"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:text="Icebreaking Operation"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
