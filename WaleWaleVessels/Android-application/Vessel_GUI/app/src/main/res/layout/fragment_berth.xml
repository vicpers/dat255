<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juliagustafsson.vessel_gui.Pilotage">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/ArrivalBerth"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="4dp"
                android:padding="4dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="sendNewServiceState"
                android:text="Arrival Berth"
                android:textSize="18sp" />

            <Button
                android:id="@+id/DepartureBerth"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="sendNewServiceState"
                android:text="Departure Berth"
                android:textSize="16sp" />

            <Button
                android:id="@+id/BerthShift"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@color/menuHeader"
                android:onClick="sendNewServiceState"
                android:text="Berth Shifting"
                android:textSize="18sp" />

        </TableRow>


    </TableLayout>
</FrameLayout>
